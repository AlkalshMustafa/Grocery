<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorCremy">

            <TextView
                android:id="@+id/nameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grocery Name"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/quantityID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textStyle="italic"
                android:paddingLeft="15dp"
                android:layout_below="@+id/nameID"

                />

            <TextView
                android:id="@+id/creatDateID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textStyle="italic"
                android:paddingLeft="15dp"
                android:layout_below="@+id/quantityID"
                android:paddingBottom="5dp"
                />
            <TableRow
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_alignBottom="@+id/creatDateID"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/editBtnID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@android:drawable/ic_menu_edit"/>
                <Button
                    android:id="@+id/deleteBtnID"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/ic_menu_delete"/>


            </TableRow>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>