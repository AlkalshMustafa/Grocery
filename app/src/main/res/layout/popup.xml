<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/popUpLayoutID"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorCremy"
            android:padding="10dp">

            <TextView
                android:id="@+id/titleId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                android:text="@string/textView"
                android:textAlignment="center"
                android:textColor="@color/colorSecondary"
                android:textSize="17dp"
                android:textStyle="italic|bold" />

            <EditText

                android:id="@+id/editNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleId"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:hint="Enter Item Name"
                android:padding="10dp" />

            <EditText
                android:id="@+id/editQtyID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editNameID"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:hint="Enter Item Quantity"
                android:padding="10dp" />
            <Button
                android:id="@+id/saveBtnID"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editQtyID"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorSecondary"
                android:padding="10dp"
                android:text="@string/saveId"
                android:textSize="14dp"
                android:textStyle="italic|bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>